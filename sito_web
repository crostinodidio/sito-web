  <script>
    function changeLanguage(lang) {
      const sections = document.querySelectorAll('[data-lang]');
      sections.forEach(sec => {
        sec.style.display = sec.getAttribute('data-lang') === lang ? 'block' : 'none';
      });

      document.querySelectorAll('[data-i18n]').forEach(el => {
        const key = el.getAttribute('data-i18n');
        el.textContent = translations[lang][key];
      });

      document.querySelectorAll('form label').forEach(label => {
        const key = label.getAttribute('data-i18n');
        if (translations[lang][key]) label.textContent = translations[lang][key];
      });

      document.querySelector('input[type="submit"]').value = translations[lang]['send'];
    }

    const translations = {
      it: {
        gallery: "Galleria",
        contact: "Contattaci",
        name: "Nome",
        surname: "Cognome",
        message: "Messaggio",
        send: "Invia"
      },
      en: {
        gallery: "Gallery",
        contact: "Contact Us",
        name: "First Name",
        surname: "Last Name",
        message: "Message",
        send: "Send"
      },
      de: {
        gallery: "Galerie",
        contact: "Kontakt",
        name: "Vorname",
        surname: "Nachname",
        message: "Nachricht",
        send: "Senden"
      },
      fr: {
        gallery: "Galerie",
        contact: "Contactez-nous",
        name: "Prénom",
        surname: "Nom",
        message: "Message",
        send: "Envoyer"
      },
      es: {
        gallery: "Galería",
        contact: "Contáctanos",
        name: "Nombre",
        surname: "Apellido",
        message: "Mensaje",
        send: "Enviar"
      }
    };
  </script>
